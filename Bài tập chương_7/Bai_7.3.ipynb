    "import tkinter as tk\n",
    "\n",
    "window = tk.Tk()\n",
    "\n",
    "window.title(\"Thay đổi kiểu phông chữ nhãn\")\n",
    "\n",
    "window.geometry(\"500x350\")  \n",
    "\n",
    "label = tk.Label(window, \n",
    "                 text=\"Phông chữ tùy chỉnh\", \n",
    "                 font=(\"Times New Roman\", 18, \"bold\"))\n",
    "label.pack(pady=20) \n",
    "\n",
    "\n",
    "window.mainloop()"
   ]
  }
